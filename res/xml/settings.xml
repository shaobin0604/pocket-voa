 	 <CheckBoxPreference android:key="@string/prefs_key_keep_screen_on"
        android:title="@string/prefs_title_keep_screen_on"
        android:defaultValue="true"
        android:summary="@string/prefs_summary_keep_screen_on"/>

 	 <CheckBoxPreference android:key="@string/prefs_key_acra.disable"
        android:title="@string/prefs_title_disable_acra"
        android:defaultValue="false"/>
        
      
  </PreferenceCategory>
  
  <PreferenceCategory android:title="@string/prefs_category_title_info">
  	<Preference android:title="@string/prefs_title_whatsnew" android:key="@string/prefs_key_whatsnew" android:persistent="false"/>
  	
  	<Preference android:title="@string/prefs_title_about" android:key="@string/prefs_key_about" android:persistent="false"/>
  	
  	<Preference android:title="@string/prefs_title_help" android:key="@string/prefs_key_help" android:persistent="false"/>
  </PreferenceCategory>
</PreferenceScreen>
